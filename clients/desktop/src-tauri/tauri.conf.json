{
  "$schema": "https://raw.githubusercontent.com/nicegui/tauri/refs/heads/dev/tooling/cli/schema.json",
  "productName": "Chatalot",
  "version": "0.19.3",
  "identifier": "com.chatalot.desktop",
  "build": {
    "frontendDist": "../../web/build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../web && npm run dev",
    "beforeBuildCommand": "cd ../web && npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Chatalot",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'wasm-unsafe-eval' blob:; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http: https: ws: wss:; img-src 'self' data: blob: http: https:; media-src 'self' blob:; worker-src 'self' blob:; object-src 'none'; base-uri 'self'; form-action 'self'; frame-src http: https:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.ico",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3"]
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    },
    "windows": {
      "wix": null,
      "nsis": {
        "installMode": "currentUser"
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYzNTAzQTMzMzkxNkJBM0MKUldROHVoWTVNenBRODRHdjcyWkpFQ2hpY2QxMEtHT2tKaWkwS2ZNSXcxUTlMVkltcGJxZjRwUGkK",
      "endpoints": [
        "https://github.com/purpleneutral/chatalot/releases/latest/download/latest.json"
      ]
    }
  }
}
