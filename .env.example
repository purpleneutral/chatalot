DATABASE_URL=postgres://chatalot:change_me_to_a_strong_password@localhost:5432/chatalot
DB_PASSWORD=change_me_to_a_strong_password
JWT_PRIVATE_KEY_PATH=./secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=./secrets/jwt_public.pem
TOTP_ENCRYPTION_KEY=change_me_32_byte_hex_key
RUST_LOG=chatalot_server=info,tower_http=info
FILE_STORAGE_PATH=./data/files
MAX_FILE_SIZE_MB=100
LISTEN_ADDR=0.0.0.0:8080

# Registration: open, invite_only (default), or closed
REGISTRATION_MODE=invite_only

# Username that gets admin privileges (optional)
ADMIN_USERNAME=

# TURN server for WebRTC voice/video relay (optional, for turn profile)
# Required when peers can't connect directly (NAT, mDNS, Cloudflare tunnel)
TURN_USER=chatalot
TURN_PASSWORD=change_me_to_a_strong_password
# JSON array of ICE servers passed to clients (include both STUN and TURN)
# ICE_SERVERS=[{"urls":"stun:stun.l.google.com:19302"},{"urls":"turn:YOUR_SERVER_IP:3478","username":"chatalot","credential":"change_me_to_a_strong_password"}]

# Cloudflare Tunnel (optional, for production profile)
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

